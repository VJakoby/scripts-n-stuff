# Custom i3blocks config file

[rofi]
command=~/.config/i3blocks/rofi-launch.sh "🕹️"
interval=once
markup=pango

[cpu_usage]
interval=1
command=~/.config/i3blocks/cpu.sh
min_width=⣾⣄ 100.00%

[memory]
command=free -h | awk '/^Mem:/ {print $3 "/" $2}'
interval=5
label=🧠

[eth0_ip]
command=ip -4 addr show eth0 | awk '/inet / {print $2}' | cut -d/ -f1
interval=10
label=📶 eth0:

[wlan0_ip]
command=ip -4 addr show wlan0 | awk '/inet / {print $2}' | cut -d/ -f1
interval=10
label=📡 wlan0:

[tun0_ip]
command=ip -4 addr show tun0 | awk '/inet / {print $2}' | cut -d/ -f1
interval=10
label=🔒 tun0:

[clock]
command=date '+%Y-%m-%d %H:%M'
interval=5
label=🕒

[reboot]
command=~/.config/i3blocks/reboot.sh
interval=once
signal=1

[poweroff]
command=~/.config/i3blocks/poweroff.sh
interval=once
signal=1
